<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.edu.timelycourse.mc.biz.repository.school.SchoolBasicInfoRepository">

    <cache eviction="LRU" flushInterval="60000" size="1024" readOnly="true" />

    <resultMap type="org.edu.timelycourse.mc.biz.entity.school.SchoolBasicInfo" id="result_school">
        <id property="id" column="id"/>  
        <result property="schoolName" column="s_name"/>
        <result property="schoolAddress" column="s_address"/>
        <result property="schoolContact" column="s_contact"/>
        <result property="schoolStatus" column="s_status"/>
    </resultMap>
    
    <insert id="insert" parameterType="SchoolBasicInfo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `t_school` (s_name, s_address, s_contact, s_status)
            VALUES(#{schoolName}, #{schoolAddress}, #{schoolContact}, #{schoolStatus})
    </insert>

    <update id="update" parameterType="SchoolBasicInfo">
        UPDATE `t_school` SET
            s_name = #{schoolName},
            s_address = #{schoolAddress},
            s_contact = #{schoolContact},
            s_status = #{schoolStatus}
        WHERE id = #{id}
    </update>
    
    <select id="get" parameterType="java.lang.Integer" resultMap="result_school">
        SELECT * FROM `t_school` where `id` = #{id}
    </select>

    <update id="delete" parameterType="java.lang.Integer">
        DELETE FROM `t_school` WHERE `id` = #{id}
    </update>

    <select id="getBySchoolName" parameterType="java.lang.String" resultMap="result_school">
        SELECT * FROM `t_school` where `s_name` = #{name}
    </select>

    <select id="getAll" resultMap="result_school">
        SELECT * FROM `t_school`
    </select>
    
</mapper>